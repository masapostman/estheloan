<!DOCTYPE html>
<html>
<head>
  <title><%= document_title%></title>
  <%= stylesheet_link_tag    'customer', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'customer', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/redmond/jquery-ui.css">
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js" type="text/javascript" ></script>
	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js" type="text/javascript"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1/i18n/jquery.ui.datepicker-ja.min.js" type="text/javascript"></script>

<script src="/assets/customer/easyselectbox.min.js"></script>
  <!-- スクリプト部分 -->
	<script>
    $(function(){  
    // 開始日と終了日  
    // 開始日  
      $( "#search_order_date_from" ).datepicker({
          defaultDate: "+1w",
          changeMonth: true,
          numberOfMonths: 1,
          onClose: function( selectedDate ) {
            $( "#search_order_date_to" ).datepicker( "option", "minDate", selectedDate );
          }
      });
      // 終了日  
    $( "#search_order_date_to" ).datepicker({
          defaultDate: "+1w",
          changeMonth: true,
          numberOfMonths: 1,
          onClose: function( selectedDate ) {
            $( "#search_order_date_from" ).datepicker( "option", "maxDate", selectedDate );
          }
    });

    }); 

	</script>
 </head>
<body>
	<div id="wrapper">
		<%= render 'customer/shared/header' %>
		<div id="container">
			<%= yield %>
		</div>
		<%= render 'customer/shared/footer' %>
	</div>

</body>
</html>
