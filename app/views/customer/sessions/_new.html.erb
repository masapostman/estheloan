<% @title = 'ログイン' %>

<div id="login-form">
  

  <%= form_for @login_form, url: :customer_session do |f| %>
    <li>
      <h1><%= @title %></h1>
    </li>
  <%= markup do |m|
    p = FormPresenter.new(f,self)
 


      m << p.text_field_block(:email,'メールアドレス')

      m << p.password_field_block(:password,'パスワード')

        end %>
    <li class="Row">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, '次回から自動ログインする' %>
    </li>
    <li>
      <%= f.submit 'ログイン' %>
    </li>


  <% end %>
</div>
